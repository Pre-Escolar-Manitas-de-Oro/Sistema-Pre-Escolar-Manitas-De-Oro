<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="card">
      <div class="card-header bg-dark text-white">
        {{#if editMode}}Edicion{{else}}Creacion{{/if}} de Tutores
      </div>

      <div class="card-body">

        <form method="POST" action="{{#if editMode}}/edit-tutor{{else}}/save-tutor{{/if}}">
          <div class="mb-3">
            <label for="name" class="form-label">Nombre:</label>
            <input type="text" class="form-control" id="name" name="Name"  required value="{{#if editMode}}{{tutor.name}}{{/if}}"/>
          </div>
  <div class="mb-3">
            <label for="lastname" class="form-label">Apellido:</label>
            <input type="text" class="form-control" id="lastname" name="LastName"  required value="{{#if editMode}}{{tutor.lastname}}{{/if}}"/>
          </div>

            <div class="mb-3">
            <label for="cedula" class="form-label">Cedula:</label>
            <input type="text" class="form-control" id="cedula" name="Cedula"  required value="{{#if editMode}}{{tutor.cedula}}{{/if}}"/>
          </div>


          {{#if editMode}}

          <input type="hidden" name="tutorId" value="{{tutor.id}}">
          
          {{/if}}

          <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
           <a href="/tutor" type="button" class="btn btn-warning">volver atras</a>
        </form>

      </div>
    </div>

  </div>
  <div class="col-md-6"></div>

</div>