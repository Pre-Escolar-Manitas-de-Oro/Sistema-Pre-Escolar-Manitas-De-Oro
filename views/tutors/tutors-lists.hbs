<h1 class="text-title">Tutores</h1>

<div class="main-container">
      <a class="btn-add" href="/save-tutor">
      Guardar tutor
      <i class="gg-add"></i>
      </a>


<div class="row">

{{#if hasTutor}}

{{#each tutor as |tu|}}

<div class="cards">
   <div class="card-container">
    <div class="cd-container">
        <div class="info">
        <p required class="card-info">Nombre: {{tu.name}}</p>
        <p required class="card-info">Apellido: {{tu.lastname}}</p>
        <p required class="card-info">CÃ©dula: {{tu.cedula}}</p>
        <p  class="card-info">Familia: {{tu.family.dataValues.name}}</p>
        <a class="btn btn-secondary btn-block" href="/edit-tutor/{{tu.id}}?edit=true">Editar</a> 
        </div>
        <div class="img-info">
        <img class="img-edit" src="/assets/imgs/tutorsave-img.png">    
        </div>
    </div>
</div>

</div>

{{/each}}

{{else}}
