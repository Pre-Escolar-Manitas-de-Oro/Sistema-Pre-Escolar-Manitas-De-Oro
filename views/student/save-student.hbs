<div class="form-container row justify-content-center mt-5">
  <div class="col-md-6">
    {{#if hasFamily}}
    <div class="card">
      <div class="form-ContainerStudent text-center">
        <p class="form-text">{{#if editMode}}Edici칩n{{else}}Creaci칩n{{/if}} de estudiantes</p>
      </div>
      <div class="form-info-container card-body shadow-lg p-3">
        <form method="POST" action="{{#if editMode}}/edit-student{{else}}/save-student{{/if}}">
          <div class="mb-3 mt-2">
            <label for="name" class="card-info">Nombre</label>
            <input type="text" class="form-control" id="name" name="name" required value="{{#if editMode}}{{student.name}}{{/if}}">
          </div>
          <div class="mb-3">
            <label for="lastname" class="card-info">Apellidos</label>
            <input type="text" class="form-control" id="lastname" name="lastname" required value="{{#if editMode}}{{student.lastname}}{{/if}}">
          </div>
          <div class="mb-3">
            <label for="birthdate" class="card-info">Fecha de cumplea침os</label>
            <input type="date" class="form-control" id="birthdate" name="birthdate" required value="{{#if editMode}}{{student.birthdate}}{{/if}}">
          </div>
          <div class="mb-3">
            <label for="familys" class="card-info">Familias</label>
            <select id="familys" name="familys" class="form-control" required>
              <option value="" {{#if editMode}}{{else}} selected {{/if}}>Seleccione una familia</option>
              {{#each family as |fam|}}
              {{#if (equals fam.id ../student.familyId)}}
              <option value="{{fam.id}}" selected>{{fam.name}}</option>
              {{else}}
              <option value="{{fam.id}}">{{fam.name}}</option>
              {{/if}}
              {{/each}}
            </select>
          </div>

          {{#if editMode}}
          <input type="hidden" name="studentId" value="{{student.id}}">
          {{/if}}

          <button type="submit" class="btn btn-succ mt-3">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
          <a href="/admin-student" class="btn btn-dang mt-3">Volver atr치s</a>
        </form>
      </div>
    </div>
    {{else}}
    <h1 class="text-danger mt-5 text-center">No hay familias creadas</h1>
    <h3 class="text-danger mt-5 text-center">Crea una familia antes de crear un estudiante</h3>
    {{/if}}
  </div>
</div>
