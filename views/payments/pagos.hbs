<main>
<h1 class="text-title">Pagos</h1>

<div class="main-container">
      <a class="btn-add" href="/payments/form">
      Guardar pago
      <i class="gg-add"></i>
      </a>
<div class="row">

{{#if hasPayments}}

{{#each payment as |pay|}}

<div class="cards">
   <div class="card-container">
    <div class="cd-container">
      <div class="info">
   <p  class="card-info">- Fecha de pago: {{pay.date}}</p>
   <p  class="card-info">- Año escolar: {{pay.schoolyear.dataValues.date}}</p>
   <p  class="card-info">- Monto: {{pay.monto}}</p>
   <p  class="card-info">- Concepto: {{pay.concepto}}</p>
   <p  class="card-info">- Número de recibo: {{pay.numero_recibo}}</p>
   <p  class="card-info">- Método de pago: {{pay.metodo}}</p>
   <p  class="card-info">- Estudiante: {{pay.student.dataValues.name}}</p>
   <p  class="card-info">- Mes: {{pay.month.dataValues.month}}</p>
   
    <br>
         <form action="/payments/{{pay.id}}/toggle-access" method="POST">
                <button type="submit" class="btn btn-secondary btn-block p-3">
                  <i class="gg-printer"></i>
                </button>
        </div>
          <div class="img-info">
            <img class="img-edit" src="https://www.pngmart.com/files/7/Payment-Download-PNG-Image.png">    
          </div>
        </form>
      </div>    
    </div>
</div>

</div>

{{/each}}

{{else}}
<div class="mt-container">
  <img class="std-img" src="/assets/imgs/pay-img.jpg">
  <img class="std-img-require" src="/assets/imgs/pay-img-require.jpg">
  <h1 class="text-error">No hay pagos realizados</h1>

{{/if}}

</div>
</div>

</main>